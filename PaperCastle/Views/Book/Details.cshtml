@model BookDto
@using PaperCastle.Application.Dto;


<h1>@Model.Title</h1>
<table>
    <tr>
        <td rowspan="4">
           <img src="@Model.CoverImageURL" width="280" height="400"/>
        </td>
        <td width="250" style="text-align:center">Author</td>
        <td>@Model.AuthorName</td>
    </tr>
    <tr>
        <td style="text-align:center">Genre</td>
        <td></td>
    </tr>
    <tr>
        <td style="text-align:center">Country</td>
        <td>@Model.CountryName</td>
    </tr>
    <tr>
        <td style="text-align:center">Year of writing</td>
        <td>@Model.YearOfWriting</td>
    </tr>
</table>
<h3 style=" margin-top: 50px">Description</h3>
<p style=" margin-top: 50px">@Model.Description</p>
